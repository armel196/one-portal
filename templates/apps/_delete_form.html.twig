<form method="post" action="{{ path('app_apps_delete', {'id': app.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.id) }}">
    <button class="rounded-full border px-4 bg-indigo-500 py-1 text-white">Delete</button>
</form>
