{% extends 'base.html.twig' %}



{% block body %}

	<div class="flex flex-col">
		<div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
			<div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
				<div class="overflow-hidden">
					<table class="min-w-full text-left text-sm font-light">
						<thead class="border-b bg-white font-medium dark:border-neutral-500 dark:bg-neutral-600">
							<tr>
								<th scope="col" class="px-6 py-4">ID</th>
								<th scope="col" class="px-6 py-4">Nom</th>
								<th scope="col" class="px-6 py-4">Url</th>
								<th scope="col" class="px-6 py-4">Description</th>
								<th scope="col" class="px-6 py-4">Client</th>
								<th scope="col" class="px-6 py-4">Role</th>
                                <th scope="col" class="px-6 py-4">Action</th>
							</tr>
						</thead>
						<tbody>
							{% for App in Apps %}
								<tr>

									<th scope="col" class="px-6 py-4">{{ App.id }}</th>
									<th scope="col" class="px-6 py-4">{{ App.nom }}</th>
									<th scope="col" class="px-6 py-4">{{ App.url }}</th>
									<th scope="col" class="px-6 py-4">{{ App.description }}</th>
									<th scope="col" class="px-6 py-4">{{ App.client }}</th>
									<th scope="col" class="px-6 py-4">{{ App.role }}</th>
                                    <th	>
										
										<a href="{{ path('app_edit',{'id':App.id}) }}">edit</a>							   
                                        <a href="{{ path('app_delete',{'id':App.id}) }}">Delete</a>
                                    </th>
									
                                   
								</tr>
							{% endfor %}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
